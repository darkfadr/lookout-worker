{
    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "Debug Increment Command",
        "cwd": "${workspaceRoot}",
        "sourceMaps": true,
        "preLaunchTask": "npm: build-vscode",
        "program": "${workspaceRoot}/dist/index",
        "args": [
            "increment",
            "3"
        ],
        "stopOnEntry": false,
        "localRoot": "${workspaceRoot}",
        "outFiles": [
            "${workspaceRoot}/dist/**"
        ],
        "envFile": "${workspaceRoot}/.env"
    }]
}
